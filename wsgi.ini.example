[uwsgi]

plugin = python3

# Flask アプリのエントリーポイント
module = app:app

# プロセス管理
master = true
processes = 2

# ソケット通信（Nginx との連携用）
socket = /tmp/eDNAmap.sock
chmod-socket = 660

# 仮想環境のパス
virtualenv = /home/jinoue/venv

# 作業ディレクトリ（Flask アプリのある場所）
chdir = /home/jinoue/eDNAmap

# ログや終了処理
vacuum = true
die-on-term = true


# ログ出力設定
logto = /var/log/uwsgi/eDNAmap.log
logfile-chmod = 664

# 以下、停止に利用
# uwsgi --stop /tmp/oednamap.pid
pidfile = /tmp/eDNAmap.pid

# ログにタイムスタンプを設定
log-date = true

